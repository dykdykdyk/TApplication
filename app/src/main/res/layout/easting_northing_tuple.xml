<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/eastingNorthingTableLayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="10.0dip"
    android:stretchColumns="1">

    <TableRow
        android:id="@+id/eastingTableRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/eastingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5.0dip"
            android:text="Easting\nX (m)"
            android:textAppearance="?android:textAppearanceSmall" />

        <EditText
            android:id="@+id/eastingEditText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:ems="10"
            android:inputType="numberDecimal|numberSigned"
            android:padding="5.0dip" />
    </TableRow>

    <TableRow
        android:id="@+id/northingTableRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/northingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5.0dip"
            android:text="Northing\nY (m)"
            android:textAppearance="?android:textAppearanceSmall" />

        <EditText
            android:id="@+id/northingEditText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:ems="10"
            android:inputType="numberDecimal|numberSigned"
            android:padding="5.0dip" />
    </TableRow>
</TableLayout>